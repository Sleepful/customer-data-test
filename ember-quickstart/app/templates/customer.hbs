{{page-title 'Customer'}}
<h2 class='p-2 text-xl'>List of Properties</h2>

<table class='table-auto border-collapse border border-slate-500'>
  <thead>
    <tr class="bg-slate-100">
      <th class="p-2">Attribute</th>
      <th class="p-2">Value</th>
    </tr>
  </thead>
  <tbody >
    {{#each @model as |prop|}}
      <tr class="odd:bg-white even:bg-slate-100 hover:bg-blue-100">
        <td class="p-2 border border-slate-600">{{prop.[0]}}</td>
        <td class="p-2 border border-slate-600">{{prop.[1]}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
<div class='flex justify-center p-4 space-x-6 w-full items-center'>
<LinkTo @route='customers' class="p-2 rounded-full border-2 border-slate-400 hover:border-orange-400"> Go Back
</LinkTo>
</div>


{{outlet}}
